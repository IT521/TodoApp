{
  "env": {
    "jest": true
  },
  "extends": "eslint-config-airbnb",
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "id-length": 0,
    "indent": [2, 4, {
      "SwitchCase": 1
    }],
    "padded-blocks": [0],
    "spaced-comment": [1, // http://eslint.org/docs/rules/spaced-comment
      "always", {
        "exceptions": [
          "-",
          "+"
        ],
        "markers": [
          "=",
          "!"
        ]
      }
    ],
    "radix": [1],
    "no-unused-vars": [2,
      {
        "vars": "all",
        "args": "none" // allow declared function arguments
      }
    ],

    /*
    * React/JSX Style
    */
    "react/sort-comp": [2, {  // https://github.com/yannickcr/eslint-plugin-react/blob/master/docs/rules/sort-comp.md
      "order": [
        "lifecycle",
        "everything-else",
        "rendering"
      ],
      "groups": {
        "rendering": [
          "/^render.+$/",
          "render"
        ]
      }
    }],
    "react/jsx-max-props-per-line": [2, { // https://github.com/yannickcr/eslint-plugin-react/blob/master/docs/rules/wrap-multilines.md
      "maximum": 1
    }],
    "react/no-did-mount-set-state": 0,
    "react/no-multi-comp": [2, {
      "ignoreStateless": true
    }],
    // Turn these off until they are reviewed by Tech leadership
    "array-bracket-spacing": 0,
    "array-callback-return": 0,
    "arrow-body-style": 0,
    "arrow-spacing": 0,
    "block-spacing": 0,
    "consistent-return": 0,
    "import/no-duplicates": 0,
    "import/no-unresolved": 0,
    "jsx-a11y/img-has-alt": 0,
    "max-len": 0,
    "no-confusing-arrow": 0,
    "no-duplicate-imports": 0,
    "no-empty-function": 0,
    "no-param-reassign": 0,
    "no-restricted-syntax": 0,
    "no-return-assign": 0,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 0,
    "no-useless-constructor": 0,
    "no-useless-escape": 0,
    "object-curly-spacing": 0,
    "object-shorthand": 0,
    "prefer-arrow-callback": 0,
    "prefer-template": 0,
    "quote-props": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-curly-spacing": 0,
    "react/jsx-equals-spacing": 0,
    "react/jsx-first-prop-new-line": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-no-bind": 0,
    "react/jsx-space-before-closing": 0,
    "react/prefer-es6-class": 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 0,
    "react/require-render-return": 0,
    "space-in-parens": 0,
  }
}
